modules = ["nodejs-20", "python-3.11", "web", "postgresql-16"]

hidden = [".pythonlibs", "node_modules", ".config", "**/__pycache__", "**/.mypy_cache", "**/*.pyc"]

[nix]
channel = "stable-24_05"

# Run button starts the unified dev server
run = "bash start-dev.sh"

# Deployment configuration
[deployment]
run = ["sh", "-c", "bash start-dev.sh"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5002
externalPort = 3001

[[ports]]
localPort = 5173
externalPort = 80
exposeLocalhost = true

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 8103
externalPort = 3002

[[ports]]
localPort = 8104
externalPort = 3003

[[ports]]
localPort = 8105
externalPort = 4200

[[ports]]
localPort = 8106
externalPort = 5173

# Environment setup
[env]
PYTHONPATH = "${REPL_HOME}/backend:${PYTHONPATH}"
VITE_API_BASE_URL = "/api"
VITE_ADMIN_EMAILS = "admin@owlquill.app"

# Language server configuration
[languages]

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"

[languages.javascript]
pattern = "**/{*.js,*.jsx,*.ts,*.tsx}"

[languages.javascript.languageServer]
start = "typescript-language-server --stdio"

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "OwlQuill Dev Server"

[[workflows.workflow]]
name = "OwlQuill Dev Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash start-dev.sh"
waitForPort = 5000
