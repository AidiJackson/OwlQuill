# OwlQuill Replit Configuration
# One-button dev environment for FastAPI + React

modules = ["nodejs-20", "python-3.11", "web"]

hidden = [".pythonlibs", "node_modules", ".config", "**/__pycache__", "**/.mypy_cache", "**/*.pyc"]

[nix]
channel = "stable-24_05"

# Run button starts the unified dev server
run = "bash start-dev.sh"

# Deployment configuration
[deployment]
run = ["sh", "-c", "bash start-dev.sh"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 5000
externalPort = 80
exposeLocalhost = true

[[ports]]
localPort = 8000
externalPort = 8000

# Environment setup
[env]
PYTHONPATH = "${REPL_HOME}/backend:${PYTHONPATH}"
VITE_API_BASE_URL = "/api"

# Language server configuration
[languages]

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"

[languages.javascript]
pattern = "**/{*.js,*.jsx,*.ts,*.tsx}"

[languages.javascript.languageServer]
start = "typescript-language-server --stdio"

[agent]
expertMode = true
